    use_frameworks!
    # BLE
    pod 'RxBluetoothKit'
    # color picker
    #pod 'IMGLYColorPicker'
    # rx guestures wrapper
    pod 'RxGesture'
    
    pod 'RxDataSources', '~> 1.0'
    
    # networking
    pod 'Alamofire'
    pod 'AlamofireImage'
    pod 'AlamofireObjectMapper'
    # layout
    pod 'SnapKit', '~> 3.2.0'
    pod 'PhoneNumberKit', '~> 2.1'
    pod 'SwiftyJSON'
end
